<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gurps.gmobi" version="0.0.2" android-versionCode="19" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GMobi</name>
    <description>Gerenciador de planilhas de GURPS 4 ed.
    Recursos :
    Criação de fichas com contagem dos pontos.
    Lista/Cadastro de pericias, vantagens e desvantagens do Gurps, rolador de dados
    </description>
    <author email="contato@aldocosta.com.br" href="http://aldocosta.com.br/">Aldo Costa</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="windows" spec="~4.4.3" />
    <plugin name="cordova-plugin-vibration" spec="~2.1.2" />
    <plugin name="cordova-plugin-camera" spec="~2.3.0" />
    <plugin name="cordova-plugin-x-socialsharing" spec="~5.1.3" />
    <plugin name="cordova-sqlite-storage" spec="~2.0.0" />
    <engine name="android" spec="~6.0.0" />
</widget>
